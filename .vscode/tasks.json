{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build the static site",
            "type": "shell",
            "command": "rake local:build",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$jekyll-error", "$jekyll-warning"]
        },
        {
            "label": "Start the local web server",
            "type": "shell",
            "command": "rake local:serve",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "isBackground": true,
            "problemMatcher": ["$jekyll-error-watch", "$jekyll-warning-watch"]
        }
    ]
}
